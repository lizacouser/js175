extends layout 

block main
  form(action=`/${game.id}/play` method="post")
    dl
      dt
        label(for="playerBetSize") How much money do you want to bet:
      dd
        input(type="number"
              id="playerBetSize"
              name="playerBetSize"
              placeholder="1"
              value=playerBetSize || 1)

    fieldset.actions
      input(type="submit" value="Bet")
      a(href=`/${game.id}`) Cancel
